<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
	
<hibernate-mapping package="mypackage">

	<class name="Employee" table="MYSCHEMA.EMPLOYEES">

		<id name="employeeId" column="EmployeeID">
			<generator class="identity" />
		</id>

		<property name="name">
			<column name="Name" length="50" not-null="true" />
		</property>

		<property name="salary">
			<column name="Salary" not-null="true" />
		</property>

		<property name="region">
			<column name="Region" length="50" not-null="true" />
		</property>
		
		<set name="skills" table="MYSCHEMA.SKILLS" cascade="all">
			<key column="EmployeeId" not-null="true"/>
			<one-to-many class="Skill"/>
		</set>
	
	</class>

</hibernate-mapping>